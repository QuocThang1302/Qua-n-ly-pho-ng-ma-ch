<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.controllers.ScheduleController" spacing="10">
    <HBox spacing="10">
        <Label text="Ngày:"/>
        <DatePicker fx:id="datePicker"/>
        <Label text="Ca:"/>
        <ChoiceBox fx:id="shiftChoice"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Tên:"/>
        <TextField fx:id="nameField"/>
        <Label text="Vai trò:"/>
        <TextField fx:id="roleField"/>
        <Button text="Thêm lịch trực" onAction="#handleAddShift"/>
    </HBox>

    <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>

    <StackPane fx:id="calendarPane" VBox.vgrow="ALWAYS"/>
</VBox>
