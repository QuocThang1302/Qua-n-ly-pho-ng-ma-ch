<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.controllers.ScheduleController" spacing="10">
    <padding><Insets right="10" left="10" bottom="10" top="10" /></padding>
    <HBox spacing="10">
        <Label text="Ngày:"/>
        <DatePicker fx:id="datePicker"/>
        <Label text="Ca:"/>
        <ChoiceBox fx:id="shiftChoice"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Mã NV:"/>
        <ComboBox fx:id="codeField" editable="true" promptText="Nhập mã nhân viên"/>
        <Label text="Tên:"/>
        <ComboBox fx:id="nameField" editable="true" promptText="Nhập tên nhân viên"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Vai trò:"/>
        <ComboBox fx:id="roleField" editable="false" promptText="Chọn vai trò"/>
        <Button text="Thêm lịch trực" onAction="#handleAddShift"/>
    </HBox>

    <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>

    <StackPane fx:id="calendarPane" VBox.vgrow="ALWAYS"/>
</VBox>
