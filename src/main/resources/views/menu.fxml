<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.controllers.MenuController">

    <!-- SIDE MENU -->
    <left>
        <VBox spacing="20" alignment="TOP_CENTER"
              prefWidth="240"
              style="-fx-background-color: white;">

            <!-- Logo & User Info -->
            <VBox alignment="CENTER" spacing="10">
                <padding><Insets top="30" bottom="10"/></padding>
                <ImageView fx:id="logoImage" fitWidth="100" fitHeight="100">
                    <image><Image url="@/assets/logo.png"/></image>
                </ImageView>
                <Label text="Mikanko" styleClass="username-label"/>
            </VBox>

            <!-- MENU ITEMS -->
            <VBox fx:id="menuItems" spacing="15">
                <padding><Insets left="20" right="20"/></padding>

                <HBox fx:id="btnDashboard" spacing="10" alignment="CENTER_LEFT"
                      styleClass="menu-item" >
                    <ImageView fitWidth="24" fitHeight="24">
                        <image><Image url="@/assets/dashboard-icon.png"/></image>
                    </ImageView>
                    <Label text="Bảng điều khiển"/>
                </HBox>

                <HBox fx:id="btnStaff" spacing="10" alignment="CENTER_LEFT"
                      styleClass="menu-item">
                    <ImageView fitWidth="24" fitHeight="24">
                        <image><Image url="@/assets/nurse-icon.png"/></image>
                    </ImageView>
                    <Label text="Nhân viên"/>
                </HBox>

                <HBox fx:id="btnPatients" spacing="10" alignment="CENTER_LEFT"
                      styleClass="menu-item">
                    <ImageView fitWidth="24" fitHeight="24">
                        <image><Image url="@/assets/patient-icon.png"/></image>
                    </ImageView>
                    <Label text="Bệnh nhân"/>
                </HBox>

                <HBox fx:id="btnAnalytics" spacing="10" alignment="CENTER_LEFT"
                      styleClass="menu-item">
                    <ImageView fitWidth="24" fitHeight="24">
                        <image><Image url="@/assets/chart-icon.png"/></image>
                    </ImageView>
                    <Label text="Phân tích"/>
                </HBox>
            </VBox>

            <!-- SIGN OUT AT BOTTOM -->
            <VBox alignment="BOTTOM_CENTER" VBox.vgrow="ALWAYS">
                <padding><Insets top="20" bottom="30"/></padding>
                <HBox fx:id="btnLogout" spacing="10" alignment="CENTER_LEFT"
                      styleClass="signout-item" >
                    <ImageView fitWidth="24" fitHeight="24">
                        <image><Image url="@/assets/signout-icon.png"/></image>
                    </ImageView>
                    <Label text="Sign out"/>
                </HBox>
            </VBox>
        </VBox>
    </left>

    <!-- CONTENT AREA -->
    <center>
        <StackPane fx:id="contentArea"
                   style="-fx-background-color: #FAFAFA;"
                   VBox.vgrow="ALWAYS"/>
    </center>
</BorderPane>
